<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.weichao.keshi.activity.LoseDetailActivity">

    <include layout="@layout/layout_title_bar_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_detail_lose_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="今天丢了饭卡"
                android:textColor="#000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_detail_lose_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:text="郑卫超"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_detail_lose_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:text="2017-10-13"
                    android:textSize="14sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_detail_foods_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="今天在一食堂附近丢了饭卡，有看见的小伙伴还请联系我哦！"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_detail_foods_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="联系方式：13791516886"
                android:textSize="16sp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_lose_detail"
                android:layout_width="360dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_detail_lose_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/select_button"
                android:padding="5dp"
                android:text="拨打电话"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
