<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="细节界面"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:foregroundGravity="center"
        android:padding="15dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_de_name"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="姓名"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_de_sex"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="性别"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_de_xiaoqu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="校区"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_de_zhuanye"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="专业"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_de_cengci"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:text="层次"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_de_xuezhi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:text="学制"
                        android:textSize="20sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_de_stu_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="学号"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_de_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="生日"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_de_idcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="身份证号"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_de_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="地址"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_de_tezheng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="备注"
                    android:textSize="20sp" />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageButton

        android:onClick="delete"
        android:id="@+id/ibt_delete"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>

</LinearLayout>