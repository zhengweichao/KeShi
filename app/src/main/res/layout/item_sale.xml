<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/iv_sale_isok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="5dp"
        android:src="@mipmap/ic_isok"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_sale_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/iv_sale_isok"
        android:paddingTop="16dp"
        android:text="出一辆自行车"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_sale_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sale_title"
        android:layout_toStartOf="@+id/iv_sale_isok"
        android:paddingTop="10dp"
        android:text="200元"
        android:textColor="@color/HomeColor"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll_sale_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sale_price"
        android:layout_marginTop="7dp"
        android:layout_toStartOf="@+id/iv_sale_isok"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sale_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="郑卫超"
            android:textColor="#777"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_sale_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="9月29日"
            android:textColor="#777"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll_sale_user"
        android:layout_marginTop="12dp"
        android:background="#aaa" />
</RelativeLayout>